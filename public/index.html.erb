<% content_for :title, "メッセージ送信フォーム" %>

<%= form_with url: @ip_message, method: :get, local: true do |f| %>
  <%= f.label :text, "表示する文字を入力してください:" %><br>
  <%= f.text_field :text, required: true %><br>

  <%= f.label :color, "半角で色を選択してください 1:赤 2:緑 3:青 4:黄：" %><br>
  <%= f.number_field :color, required: true %><br>

  <%= f.label :font_size, "半角で大きさを選択してください 1:小 2:中 3:大：" %><br>
  <%= f.number_field :font_size, required: true %><br>

  <%= f.submit "送信" %>
<% end %>
